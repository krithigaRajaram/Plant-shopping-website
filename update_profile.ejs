<section class="user-details" >
   <div class="user">
    <img src="images/acc.jpg" alt="">
      
      <%customersList.forEach( customer=> {%>
         <p><i class="fas fa-user"></i> <span><%= customer.name %></span></p>
         <p><i class="fas fa-envelope"></i> <span><%=customer.username %></span></p>
         <%})%> 
   <form action="update_pro" method="POST">
     <input type="password" maxlength="20" id="new_pass" name="new_pass" placeholder="enter your new password" class="box" oninput="this.value = this.value.replace(/\s/g, '')">
      <input type="password" maxlength="20" id="confirm_pass" name="confirm_pass" placeholder="confirm your new password" class="box" oninput="this.value = this.value.replace(/\s/g, '')">
      <input type="text" required maxlength="70" id="address" name="address" placeholder="enter your address" class="box" oninput="this.value = this.value.replace(/\s/g, '')" >
      <input type="number" id="number" min="0" max="9999999999" onkeypress="if(this.value.length == 10) return false;" placeholder="enter your number" required class="box" name="number">
      <input type="submit" value="Update Now" class="btn" name="submit" >

   </form>
   
   </div>

